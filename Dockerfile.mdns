FROM debian:bookworm-slim

RUN apt-get update && apt-get install -y --no-install-recommends \
        avahi-daemon avahi-utils bash ca-certificates dbus libnss-mdns \
    && rm -rf /var/lib/apt/lists/*

COPY publish-mdns-aliases.sh /usr/local/bin/
ENTRYPOINT ["/usr/local/bin/publish-mdns-aliases.sh"]
